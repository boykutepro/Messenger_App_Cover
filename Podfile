# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Messenger_Cover_App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Messenger_Cover_App
	pod 'Firebase/Core'
	pod 'Firebase/Auth'
	pod 'Firebase/Database'
	pod 'Firebase/Storage'

  # Facebook login
	pod 'FBSDKLoginKit'
  # Google Sign In
	pod 'GoogleSignIn'
  # Giup tao giao dien tro chuyen dep.
	pod 'MessageKit'
  # Custom giao dien: Acitivity Indicator, Spinner.
	pod 'JGProgressHUD'
  # Save things to the device and open app when there's no internet(cached data).Và giảm số lần truy cập đến firebase để giảm chi phí cơ sở dữ liệu.
	pod 'RealmSwift'
  # Load hình ảnh từ URL
	pod 'SDWebImage'
end
